<?xml version="1.0" encoding="utf-8"?>
<com.example.hotel.ui.DragLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    tools:ignore="MissingClass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:src="@drawable/ic_back" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="96dp"
                android:layout_height="62dp"
                android:visibility="visible"
                app:srcCompat="@drawable/pic1"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="14dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="20dp"
                android:text="天窗"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"

                tools:layout_editor_absoluteX="193dp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_chaotic_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_write_inf"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:text="填写资料" />

            <Button
                android:id="@+id/btn_connection_setting"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:text="通讯设置" />

            <Button
                android:id="@+id/btn_start_measure"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:text="启动测量" />

        </LinearLayout>


        <com.example.hotel.ui.ZoomImageView
            android:id="@+id/my_image_view5"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@mipmap/pic2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

        </com.example.hotel.ui.ZoomImageView>


    </LinearLayout>



    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="220dp"
        android:layout_marginStart="200dp">

        <LinearLayout
            android:id="@+id/ll_Z10"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_border"
            android:visibility="invisible">
            <TextView
                android:id="@+id/z10"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:text="Z10:"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:textStyle="bold"
                android:maxLines="2"/>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:text="0.5"
                    android:gravity="center_vertical|end"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    tools:ignore="SmallSp" />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:text="-0.5"
                    android:gravity="center_vertical|end"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    tools:ignore="SmallSp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:layout_weight="2"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"/>

            </LinearLayout>
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>



        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="220dp"
        android:layout_marginStart="80dp">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_border"
            android:visibility="invisible">
            <TextView
                android:id="@+id/z9"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:text="Z9:"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:textStyle="bold"
                android:maxLines="2"/>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:text="0.5"
                    android:gravity="center_vertical|end"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    tools:ignore="SmallSp" />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:text="-0.5"
                    android:gravity="center_vertical|end"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    tools:ignore="SmallSp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:layout_weight="2"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"/>

            </LinearLayout>
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>



        </LinearLayout>
    </FrameLayout>



    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp" />

</com.example.hotel.ui.DragLayout>






